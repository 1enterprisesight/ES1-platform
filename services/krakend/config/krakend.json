{
  "@comment": "Docker Compose base config. Backend hosts use compose service names (es1-platform-manager-api, airflow-webserver, etc) and static URLs (admin_ui) reference localhost. For Kubernetes, the Helm chart must provide a K8s-specific overlay with correct service names, namespaced DNS (e.g. airflow-webserver.<namespace>.svc.cluster.local), and external-facing URLs.",
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "ES1 Platform API Gateway",
  "port": 8080,
  "timeout": "30s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "logstash"
    },
    "telemetry/metrics": {
      "collection_time": "30s",
      "listen_address": ":8090"
    },
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 10,
      "exporters": {
        "prometheus": {
          "port": 9091,
          "namespace": "krakend",
          "tag_host": false,
          "tag_path": true,
          "tag_method": true,
          "tag_statuscode": true
        }
      }
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": ["Origin", "Content-Type", "Accept", "Authorization", "X-API-Key", "X-Request-ID", "X-Source-Service"],
      "expose_headers": ["X-Request-ID", "X-Krakend-Completed"],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "@comment": "Health check endpoint",
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://localhost:8080"],
          "url_pattern": "/__health",
          "encoding": "json"
        }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "status": "healthy",
              "service": "krakend"
            },
            "strategy": "always"
          }
        }
      }
    },
    {
      "@comment": "API Gateway info endpoint",
      "endpoint": "/api/v1/info",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://localhost:8080"],
          "url_pattern": "/__health",
          "encoding": "json"
        }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "name": "ES1 Platform API Gateway",
              "version": "1.0.0",
              "gateway": "krakend",
              "services": {
                "platform-manager": "/api/v1/platform/*",
                "airflow": "/api/v1/airflow/*",
                "langflow": "/api/v1/langflow/*",
                "langfuse": "/api/v1/langfuse/*",
                "ollama": "/api/v1/ollama/*",
                "mlflow": "/api/v1/mlflow/*",
                "knowledge": "/api/v1/knowledge/*",
                "agents": "/api/v1/agents/*",
                "n8n-webhooks": "/webhook/*"
              },
              "admin_ui": "http://localhost:3001"
            },
            "strategy": "always"
          }
        }
      }
    },

    {
      "@comment": "=== PLATFORM MANAGER API ===",
      "endpoint": "/api/v1/platform/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": ["*"],
      "backend": [
        {
          "host": ["http://es1-platform-manager-api:8000"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/v1/platform/{path}",
      "method": "POST",
