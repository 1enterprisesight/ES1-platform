{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "ES1 Platform API Gateway",
  "port": 8080,
  "timeout": "30s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "30s",
      "listen_address": ":8090"
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": ["Origin", "Content-Type", "Accept", "Authorization", "X-Request-ID"],
      "expose_headers": ["X-Request-ID"],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://localhost:8080"],
          "url_pattern": "/__health",
          "encoding": "json"
        }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "status": "healthy",
              "service": "krakend"
            },
            "strategy": "always"
          }
        }
      }
    },
    {
      "endpoint": "/api/v1/info",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": ["http://localhost:8080"],
          "url_pattern": "/__health",
          "encoding": "json"
        }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "name": "ES1 Platform API",
              "version": "1.0.0",
              "gateway": "krakend",
              "services": {
                "gateway-manager": "/api/gateway-manager",
                "airflow": "/api/airflow",
                "langflow": "/api/langflow",
                "langfuse": "/api/langfuse"
              }
            },
            "strategy": "always"
          }
        }
      }
    },
    {
      "@comment": "Gateway Manager API - Resource discovery and exposure management",
      "endpoint": "/api/gateway-manager/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://gateway-manager-api:8000"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/gateway-manager/{path}",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://gateway-manager-api:8000"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/gateway-manager/{path}",
      "method": "PUT",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://gateway-manager-api:8000"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/gateway-manager/{path}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://gateway-manager-api:8000"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "@comment": "Airflow REST API - DAG management and execution",
      "endpoint": "/api/airflow/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://airflow-webserver:8080"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op",
          "extra_config": {
            "auth/api-keys": {
              "keys": []
            }
          }
        }
      ],
      "extra_config": {
        "auth/basic": {
          "htpasswd_path": ""
        }
      }
    },
    {
      "endpoint": "/api/airflow/{path}",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://airflow-webserver:8080"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/airflow/{path}",
      "method": "PATCH",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://airflow-webserver:8080"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/airflow/{path}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://airflow-webserver:8080"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "@comment": "Langflow API - Visual LLM pipeline execution",
      "endpoint": "/api/langflow/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://langflow:7860"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/langflow/{path}",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://langflow:7860"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/langflow/{path}",
      "method": "PUT",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://langflow:7860"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/langflow/{path}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://langflow:7860"],
          "url_pattern": "/api/v1/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "@comment": "Langfuse API - LLM observability and tracing",
      "endpoint": "/api/langfuse/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://langfuse:3000"],
          "url_pattern": "/api/{path}",
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/langfuse/{path}",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://langfuse:3000"],
          "url_pattern": "/api/{path}",
          "encoding": "no-op"
        }
      ]
    }
  ]
}
